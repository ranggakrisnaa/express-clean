# Environment Variables Template
# Copy this file to .env and update the values

# Node Environment
NODE_ENV=development
PORT=3000

# PostgreSQL Primary (Write Operations)
DATABASE_URL=postgresql://postgres:postgres123@localhost:5432/activity_tracker

# PostgreSQL Read Replicas (Comma-separated)
DATABASE_READ_REPLICAS=postgresql://postgres:postgres123@localhost:5433/activity_tracker,postgresql://postgres:postgres123@localhost:5434/activity_tracker

# Redis Primary (Write Operations & Pub/Sub)
REDIS_URL=redis://:redis123@localhost:6379

# Redis Replica (Read Operations)
REDIS_READ_URL=redis://:redis123@localhost:6380

# Redis Sentinel Configuration
REDIS_SENTINEL_HOSTS=localhost:26379
REDIS_SENTINEL_NAME=mymaster

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-minimum-32-characters
JWT_EXPIRES_IN=24h

# API Rate Limiting
API_RATE_LIMIT=1000
RATE_LIMIT_WINDOW=3600

# Cache TTL (seconds)
CACHE_TTL_SHORT=300       # 5 minutes
CACHE_TTL_MEDIUM=3600     # 1 hour
CACHE_TTL_LONG=86400      # 24 hours

# Batch Processing
LOG_BATCH_SIZE=100
LOG_BATCH_INTERVAL=1000

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key
ENCRYPTION_ALGORITHM=aes-256-gcm

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Logging
LOG_LEVEL=info

# WebSocket
WS_PORT=3001
WS_PING_INTERVAL=30000
WS_PING_TIMEOUT=5000
